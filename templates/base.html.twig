<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:400,500,700,400italic|Material+Icons">
        <link rel="stylesheet" href="{{  asset('build/app.css') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div id="app" class="page-container" v-cloak>
            <md-app>
                <md-app-toolbar class="md-primary">
                    <md-button class="md-icon-button" @click="toggleMenu" v-if="!menuVisible">
                        <md-icon>menu</md-icon>
                    </md-button>
                    <span class="md-title">
                        <svg class="d-icon">
                            <use xlink:href="{{ asset('build/images/sprites.svg') }}#daffy-logo-head"></use>
                        </svg>
                        DaFFy, the Dockerfile Factory
                    </span>
                </md-app-toolbar>

                <md-app-drawer md-persistent="mini" :md-active.sync="menuVisible">
                    <md-toolbar class="md-transparent" md-elevation="0">
                        Navigation

                        <div class="md-toolbar-section-end">
                            <md-button class="md-icon-button md-dense" @click="toggleMenu">
                                <md-icon>keyboard_arrow_left</md-icon>
                            </md-button>
                        </div>
                    </md-toolbar>

                    <md-list>
                        <md-list-item href="{{ path('app') }}">
                            <md-icon>dashboard</md-icon>
                            <span class="md-list-item-text">
                                Dashboard
                            </span>
                        </md-list-item>
                        <md-list-item href="{{ path('app') }}">
                            <md-icon>settings</md-icon>
                            <span class="md-list-item-text">
                                Settings
                            </span>
                        </md-list-item>
                        <md-list-item href="{{ path('app') }}">
                            <md-icon>bookmarks</md-icon>
                            <span class="md-list-item-text">
                                Templates
                            </span>
                        </md-list-item>
                    </md-list>
                </md-app-drawer>

                <md-app-content class="d-content d-content--main">
                    {% block body %}{% endblock %}
                </md-app-content>
            </md-app>
        </div>
        {% block javascripts %}
            <script src="{{ asset('build/manifest.js') }}"></script>
            <script src="{{ asset('build/vendor.js') }}"></script>
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
